---
import { Icon } from "astro-icon/components";

const name = "Paolo Conte";
const title = "Product Designer";
const year = new Date().getFullYear();

const navItems = [
  "about",
  "progetti",
  "direzione artistica",
  "ricerca personale",
  "pubblicazioni",
  "clienti",
  "archivio",
];

const slugify = (label: string) =>
  label
    .toLowerCase()
    .normalize("NFD")
    .replace(/[\u0300-\u036f]/g, "")
    .replace(/\s+/g, "-");
---

